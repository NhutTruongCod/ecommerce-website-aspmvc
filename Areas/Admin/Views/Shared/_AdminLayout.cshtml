@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <div class="d-flex">

        <!-- Sidebar -->
        <nav class="flex-column bg-dark text-white vh-100 p-3" style="width: 250px;">
            <div class="d-flex align-items-center justify-content-between mb-2" style="height:48px;">
                <span class="fs-4 fw-bold">Admin Panel</span>
            </div>
            <hr class="my-2" style="border-top: 2px solid #fff; opacity:1;" />
            <ul class="nav nav-pills flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">
                        <i class="fas fa-box me-2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" href="@Url.Action("Index", "Product", new { area = "Admin" })">
                        <i class="fas fa-box me-2"></i> Quản lý sản phẩm
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" href="@Url.Action("Index", "Orders", new { area = "Admin" })">
                        <i class="fas fa-shopping-cart me-2"></i> Quản lý đơn hàng
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" href="@Url.Action("Index", "Users", new { area = "Admin" })">
                        <i class="fas fa-users me-2"></i> Quản lý User
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" href="@Url.Action("ManageInventory", "Product", new { area = "Admin" })">
                        <i class="fas fa-box me-2"></i> Quản lý tồn kho
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="flex-grow-1 p-4">
            @RenderBody()
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
