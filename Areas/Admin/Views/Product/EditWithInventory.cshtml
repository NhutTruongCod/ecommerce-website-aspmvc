@model webbanhang.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Edit Product with Inventory";
    var product = ViewBag.Product as webbanhang.Models.Product;
}

<h2>Edit Product & Inventory</h2>

<form asp-action="EditWithInventory" method="post" enctype="multipart/form-data" id="editForm">
    <input asp-for="ProductId" type="hidden" />

    <div class="row">
        <!-- Product Information Section -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Product Information</h5>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="ProductName" class="control-label"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CategoryId" class="control-label">Category</label>
                        <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control">
                            <option value="">-- Select Category --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="SizeIds" class="control-label">Sizes</label>
                        <select asp-for="SizeIds" asp-items="Model.Sizes" class="form-control" multiple id="sizeSelect">
                        </select>
                        <span asp-validation-for="SizeIds" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ColorIds" class="control-label">Colors</label>
                        <select asp-for="ColorIds" asp-items="Model.Colors" class="form-control" multiple
                            id="colorSelect">
                        </select>
                        <span asp-validation-for="ColorIds" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Images" class="control-label">Images</label>
                        <input asp-for="Images" class="form-control" type="file" multiple accept="image/*" />
                        <span asp-validation-for="Images" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Inventory Section -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Inventory Management</h5>
                </div>
                <div class="card-body">
                    <div id="inventorySection">
                        @if (product?.Productvariants != null)
                        {
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Size</th>
                                        <th>Color</th>
                                        <th>Current Stock</th>
                                        <th>New Stock</th>
                                    </tr>
                                </thead>
                                <tbody id="inventoryTable">
                                    @foreach (var variant in product.Productvariants)
                                    {
                                        <tr>
                                            <td>@variant.Size?.SizeName</td>
                                            <td>@variant.Color?.ColorName</td>
                                            <td>@variant.Inventories.FirstOrDefault()?.Quantity</td>
                                            <td>
                                                <input type="number"
                                                    name="inventoryData[variant_@(variant.SizeId)_@(variant.ColorId)]"
                                                    value="@variant.Inventories.FirstOrDefault()?.Quantity"
                                                    class="form-control form-control-sm" min="0" />
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        <div id="newVariantsTable" style="display: none;">
                            <h6>New Variants (will be created):</h6>
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Size</th>
                                        <th>Color</th>
                                        <th>Initial Stock</th>
                                    </tr>
                                </thead>
                                <tbody id="newVariantsBody">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Update Product & Inventory</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const sizeSelect = document.getElementById('sizeSelect');
        const colorSelect = document.getElementById('colorSelect');
        const newVariantsTable = document.getElementById('newVariantsTable');
        const newVariantsBody = document.getElementById('newVariantsBody');

        function updateNewVariants() {
            const selectedSizes = Array.from(sizeSelect.selectedOptions);
            const selectedColors = Array.from(colorSelect.selectedOptions);

            newVariantsBody.innerHTML = '';
            let hasNewVariants = false;

            selectedSizes.forEach(sizeOption => {
                selectedColors.forEach(colorOption => {
                    const sizeId = parseInt(sizeOption.value);
                    const colorId = parseInt(colorOption.value);

                    // Simple check for existing combination
                    let exists = false;
                    @if (product?.Productvariants != null)
                        {
                        @foreach (var variant in product.Productvariants)
                            {
                                <text>
                                    if (sizeId === @(variant.SizeId ?? 0) && colorId === @(variant.ColorId ?? 0)) {
                                        exists = true;
                                }
                                </text>
                        }
                        }
                
                if (!exists) {
                        hasNewVariants = true;
                        const row = document.createElement('tr');
                        row.innerHTML = `
                        <td>${sizeOption.text}</td>
                        <td>${colorOption.text}</td>
                        <td>
                            <input type="number" 
                                   name="inventoryData[variant_${sizeId}_${colorId}]" 
                                   value="0" 
                                   class="form-control form-control-sm" 
                                   min="0" />
                        </td>
                    `;
                        newVariantsBody.appendChild(row);
                    }
                });
            });

            newVariantsTable.style.display = hasNewVariants ? 'block' : 'none';
        }

        sizeSelect.addEventListener('change', updateNewVariants);
        colorSelect.addEventListener('change', updateNewVariants);

        // Initial call
        updateNewVariants();
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
