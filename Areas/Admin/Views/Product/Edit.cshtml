@model ProductViewModel
@{
    var existingProduct = ViewBag.Product as Product;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-edit mr-1"></i>
                        Chỉnh sửa sản phẩm
                    </h3>
                    <div class="card-tools">
                        <a asp-action="Index" class="btn btn-secondary btn-sm">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>

                <form asp-action="Edit" enctype="multipart/form-data" method="post">
                    <div class="card-body">
                        <div class="row">
                            <!-- Thông tin cơ bản -->
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label asp-for="ProductName" class="control-label">Tên sản phẩm *</label>
                                    <input asp-for="ProductName" class="form-control" required />
                                    <span asp-validation-for="ProductName" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="CategoryId" class="control-label">Danh mục *</label>
                                    <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control"
                                        required>
                                        <option value="">-- Chọn danh mục --</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Description" class="control-label">Mô tả</label>
                                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Price" class="control-label">Giá (VNĐ) *</label>
                                    <input asp-for="Price" type="number" min="0" step="1000" class="form-control"
                                        required />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Ảnh hiện tại -->
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label">Ảnh hiện tại</label>
                                    <div class="current-images">
                                        @if (existingProduct?.Productimages != null &&
                                                                                existingProduct.Productimages.Any())
                                        {
                                            <div class="row">
                                                @foreach (var img in existingProduct.Productimages)
                                                {
                                                    <div class="col-6 mb-2">
                                                        <img src="@img.ImageUrl" class="img-thumbnail"
                                                            style="width: 100%; height: 100px; object-fit: cover;" />
                                                    </div>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <p class="text-muted">Chưa có ảnh</p>
                                        }
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Images" class="control-label">Thêm ảnh mới</label>
                                    <input asp-for="Images" type="file" class="form-control-file" multiple
                                        accept="image/*" />
                                    <small class="form-text text-muted">Chọn nhiều ảnh để thêm vào sản phẩm</small>
                                    <span asp-validation-for="Images" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Biến thể sản phẩm -->
                        <hr />
                        <h5><i class="fas fa-palette"></i> Biến thể sản phẩm</h5>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ColorIds" class="control-label">Màu sắc *</label>
                                    <select asp-for="ColorIds" asp-items="Model.Colors" class="form-control" multiple
                                        size="5" required>
                                    </select>
                                    <small class="form-text text-muted">Giữ Ctrl để chọn nhiều màu</small>
                                    <span asp-validation-for="ColorIds" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="SizeIds" class="control-label">Kích thước *</label>
                                    <select asp-for="SizeIds" asp-items="Model.Sizes" class="form-control" multiple
                                        size="5" required>
                                    </select>
                                    <small class="form-text text-muted">Giữ Ctrl để chọn nhiều size</small>
                                    <span asp-validation-for="SizeIds" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Lưu ý:</strong> Khi cập nhật biến thể, tất cả variants cũ sẽ bị xóa và tạo lại với
                            số lượng tồn kho = 0.
                            Bạn có thể quản lý tồn kho sau khi lưu.
                        </div>
                    </div>

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Cập nhật sản phẩm
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Hủy
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Preview ảnh mới được chọn
        $('input[type="file"]').change(function () {
            var files = this.files;
            var preview = $('.current-images');

            if (files.length > 0) {
                var newImagesHtml = '<div class="mt-3"><h6>Ảnh mới được chọn:</h6><div class="row">';

                for (var i = 0; i < Math.min(files.length, 6); i++) {
                    var file = files[i];
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        newImagesHtml += '<div class="col-4 mb-2"><img src="' + e.target.result +
                            '" class="img-thumbnail" style="width: 100%; height: 80px; object-fit: cover;" /></div>';
                    };

                    reader.readAsDataURL(file);
                }

                newImagesHtml += '</div></div>';

                setTimeout(function () {
                    if ($('.new-images-preview').length === 0) {
                        preview.after('<div class="new-images-preview">' + newImagesHtml + '</div>');
                    }
                }, 100);
            }
        });
    </script>
}
