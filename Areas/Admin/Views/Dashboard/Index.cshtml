@{
    ViewData["Title"] = "Dashboard Admin";
}

<div class="d-flex">

    <!-- Sidebar -->
    <nav class="flex-column bg-dark text-white vh-100 p-3" style="width: 250px;">
        <div class="d-flex align-items-center justify-content-between mb-2" style="height:48px;">
            <span class="fs-4 fw-bold">Admin Panel</span>
        </div>
        <hr class="my-2" style="border-top: 2px solid #fff; opacity:1;" />
        <ul class="nav nav-pills flex-column">
            <li class="nav-item mb-2">
                <a class="nav-link text-white" href="@Url.Action("Index", "Products", new { area = "Admin" })">
                    <i class="fas fa-box me-2"></i> Quản lý sản phẩm
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white" href="@Url.Action("Index", "Orders", new { area = "Admin" })">
                    <i class="fas fa-shopping-cart me-2"></i> Quản lý đơn hàng
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white" href="@Url.Action("Index", "Users", new { area = "Admin" })">
                    <i class="fas fa-users me-2"></i> Quản lý User
                </a>
            </li>
        </ul>
    </nav>

    <!-- Main Content -->
    <div class="flex-grow-1 p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">Dashboard - NhutgamingShop</h2>
            <form asp-area="Admin" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-sign-out-alt me-1"></i> Đăng xuất
                </button>
            </form>
        </div>
        <div class="row g-3 mb-4">
            <div class="col-6 col-md-3">
                <div class="card text-white bg-primary h-100 shadow-sm">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-0">@ViewBag.TotalCategories</h4>
                            <p class="mb-0">Danh mục</p>
                        </div>
                        <i class="fas fa-list-alt fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="card text-white bg-success h-100 shadow-sm">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-0">@ViewBag.TotalProducts</h4>
                            <p class="mb-0">Sản phẩm</p>
                        </div>
                        <i class="fas fa-box fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="card text-white bg-warning h-100 shadow-sm">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-0">@ViewBag.TotalOrders</h4>
                            <p class="mb-0">Đơn hàng</p>
                        </div>
                        <i class="fas fa-shopping-cart fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="card text-white bg-info h-100 shadow-sm">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-0">@ViewBag.TotalUsers</h4>
                            <p class="mb-0">Người dùng</p>
                        </div>
                        <i class="fas fa-users fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row g-3 mb-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="fas fa-bolt me-2"></i>Thao tác nhanh
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-6 col-md-3">
                                <a href="@Url.Action("Create", "Categories")"
                                    class="btn btn-outline-primary w-100 py-4 d-flex flex-column align-items-center justify-content-center">
                                    <i class="fas fa-plus-circle fa-2x mb-2"></i>
                                    <span>Thêm danh mục</span>
                                </a>
                            </div>
                            <div class="col-6 col-md-3">
                                <a href="@Url.Action("Create", "Products")"
                                    class="btn btn-outline-success w-100 py-4 d-flex flex-column align-items-center justify-content-center">
                                    <i class="fas fa-box fa-2x mb-2"></i>
                                    <span>Thêm sản phẩm</span>
                                </a>
                            </div>
                            <div class="col-6 col-md-3">
                                <a href="@Url.Action("Index", "Orders")"
                                    class="btn btn-outline-warning w-100 py-4 d-flex flex-column align-items-center justify-content-center">
                                    <i class="fas fa-list fa-2x mb-2"></i>
                                    <span>Xem đơn hàng</span>
                                </a>
                            </div>
                            <div class="col-6 col-md-3">
                                <a href="@Url.Action("Index", "Home")"
                                    class="btn btn-outline-info w-100 py-4 d-flex flex-column align-items-center justify-content-center">
                                    <i class="fas fa-home fa-2x mb-2"></i>
                                    <span>Về trang chủ</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activities + Quick Stats -->
        <div class="row g-3">
            <!-- Recent Activities -->
            <div class="col-lg-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="fas fa-clock me-2"></i>Hoạt động gần đây</h6>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                <div>
                                    <h6 class="mb-1">Hệ thống khởi động</h6>
                                    <small class="text-muted">Admin panel đã sẵn sàng hoạt động</small>
                                </div>
                                <span class="text-muted small">@DateTime.Now.ToString("HH:mm")</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                <div>
                                    <h6 class="mb-1">Database kết nối thành công</h6>
                                    <small class="text-muted">Kết nối MySQL hoạt động bình thường</small>
                                </div>
                                <span class="text-muted small">@DateTime.Now.AddMinutes(-2).ToString("HH:mm")</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="col-lg-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="fas fa-chart-line me-2"></i>Thống kê nhanh</h6>
                    </div>
                    <div class="card-body">
                        <div class="row text-center g-3">
                            <div class="col-6">
                                <div class="border-end">
                                    <h4 class="text-primary mb-1">@ViewBag.ProductsWithImages</h4>
                                    <small class="text-muted">SP có hình ảnh</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <h4 class="text-warning mb-1">@ViewBag.ProductsWithoutImages</h4>
                                <small class="text-muted">SP chưa có hình</small>
                            </div>
                            <div class="col-6">
                                <div class="border-end">
                                    <h4 class="text-success mb-1">@ViewBag.CategoriesWithProducts</h4>
                                    <small class="text-muted">DM có sản phẩm</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <h4 class="text-danger mb-1">@ViewBag.EmptyCategories</h4>
                                <small class="text-muted">DM trống</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
