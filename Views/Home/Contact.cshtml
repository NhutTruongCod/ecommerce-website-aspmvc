<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css" rel="stylesheet">

<div class="container py-5">
    <div class="contact__wrapper shadow-lg rounded-4 bg-white" style="margin-top: 40px; margin-bottom: 40px;">
        <div class="row g-0">
            <!-- Cột trái: thông tin liên hệ -->
            <div class="col-lg-5 contact-info__wrapper gradient-brand-color p-5 order-lg-2 rounded-end-4 d-flex flex-column justify-content-center"
                style="min-height: 420px; background: linear-gradient(135deg, #1a8730, #025929); color: white;">
                <h3 class="color--white mb-5">Liên hệ với chúng tôi</h3>

                <ul class="contact-info__list list-unstyled position-relative z-index-101">
                    <li class="mb-4 d-flex align-items-center">
                        <i class="fas fa-envelope me-3"></i> nhutgaming1@gmail.com
                    </li>
                    <li class="mb-4 d-flex align-items-center">
                        <i class="fas fa-phone me-3"></i> +84858252101
                    </li>
                    <li class="mb-4 d-flex align-items-center">
                        <i class="fas fa-map-marker-alt me-3"></i>
                        <div>
                            34 Nguyễn Sáng<br>
                            Phường Tây Thạnh, Quận Tân Phú<br>
                            Thành Phố Hồ Chí Minh, Việt Nam
                        </div>
                    </li>
                    <li class="mb-4 d-flex align-items-center">
                        <i class="fab fa-facebook-f me-3"></i>
                        <a href="https://facebook.com/yourpage" target="_blank"
                            class="text-white text-decoration-none">Facebook</a>
                    </li>
                    <li class="mb-4 d-flex align-items-center">
                        <i class="fab fa-instagram me-3"></i>
                        <a href="https://instagram.com/yourpage" target="_blank"
                            class="text-white text-decoration-none">Instagram</a>
                    </li>
                </ul>

                <div class="mt-3">
                    <a href="https://www.google.com/maps" target="_blank"
                        class="text-link link--right-icon text-white">Get directions <i
                            class="link__icon fa fa-directions"></i></a>
                </div>
            </div>

            <!-- Cột phải: form liên hệ -->
            <div class="col-lg-7 contact-form__wrapper p-5 order-lg-1 rounded-start-4 bg-white">
                <form action="#" class="contact-form form-validate" novalidate="novalidate">
                    <div class="row">
                        <div class="col-sm-6 mb-3">
                            <div class="form-group">
                                <label class="required-field" for="firstName">Họ</label>
                                <input type="text" class="form-control" id="firstName" name="firstName"
                                    placeholder="Trương">
                            </div>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <div class="form-group">
                                <label for="lastName">Tên</label>
                                <input type="text" class="form-control" id="lastName" name="lastName"
                                    placeholder="Văn A">
                            </div>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <div class="form-group">
                                <label class="required-field" for="email">Email</label>
                                <input type="text" class="form-control" id="email" name="email"
                                    placeholder="abc@gmail.com">
                            </div>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <div class="form-group">
                                <label for="phone">Số điện thoại</label>
                                <input type="tel" class="form-control" id="phone" name="phone"
                                    placeholder="098 334 788">
                            </div>
                        </div>
                        <div class="col-sm-12 mb-3">
                            <div class="form-group">
                                <label class="required-field" for="message">Chúng tôi có thể giúp gì cho bạn?</label>
                                <textarea class="form-control" id="message" name="message" rows="4"
                                    placeholder="Chào bạn, tôi muốn....."></textarea>
                            </div>
                        </div>
                        <div class="col-sm-12 mb-3 d-flex justify-content-center">
                            <style>
                                .btn-custom {
                                    background-color: #0a8a31;
                                    color: white;
                                    border: none;
                                }

                                .btn-custom:hover {
                                    background-color: #19ba5a;
                                    color: white; 
                                }
                            </style>
                            <button type="submit" name="submit" class="btn btn-custom">Gửi đi</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
