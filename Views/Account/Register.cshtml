@model webbanhang.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Đăng ký";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success text-center">@TempData["Success"]</div>
}
else if (ViewBag.Error != null)
{
    <div class="alert alert-danger text-center">@ViewBag.Error</div>
}

<section class="py-3 py-md-5 py-xl-8">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="mb-5">
                    <h2 class="display-5 fw-bold text-center">Đăng ký</h2>
                    <p class="text-center m-0">Đã có tài khoản? <a asp-action="Login">Đăng nhập</a></p>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-12 col-lg-8 col-xl-6">
                <form asp-action="Register" asp-controller="Account" method="post" autocomplete="off">
                    @Html.AntiForgeryToken()
                    <div class="row gy-3 overflow-hidden border p-4 rounded shadow bg-white">

                        <!-- Họ tên -->
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="FullName" class="form-control border-0 border-bottom rounded-0"
                                    placeholder="Nguyễn Văn A" />
                                <label asp-for="FullName"></label>
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Số điện thoại -->
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Phone" class="form-control border-0 border-bottom rounded-0" placeholder="0123456789" />
                                <label asp-for="Phone"></label>
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control border-0 border-bottom rounded-0" placeholder="name@example.com" />
                                <label asp-for="Email"></label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Mật khẩu -->
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Password" type="password" class="form-control border-0 border-bottom rounded-0" placeholder="Mật khẩu" />
                                <label asp-for="Password"></label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Xác nhận mật khẩu -->
                        <div class="col-12">
                            <div class="form-floating mb-4">
                                <input asp-for="ConfirmPassword" type="password" class="form-control border-0 border-bottom rounded-0" placeholder="Nhập lại mật khẩu" />
                                <label asp-for="ConfirmPassword"></label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Nút đăng ký -->
                        <div class="col-12 mb-4">
                            <div class="d-grid">
                                <button class="btn btn-lg rounded-0 fs-6"
                                    style="background-color: rgb(5, 133, 3); color: white; border: none;" type="submit">
                                    Đăng ký
                                </button>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</section>