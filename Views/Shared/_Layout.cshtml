    <script>
        // Hiện/ẩn thanh tìm kiếm khi hover hoặc click vào icon
        document.addEventListener('DOMContentLoaded', function () {
            var searchBox = document.querySelector('.search-box-group');
            var searchToggle = document.querySelector('.search-toggle');
            var searchForm = document.querySelector('.search-form');
            var hideTimeout = null;
            if (searchBox && searchToggle && searchForm) {
                searchToggle.addEventListener('mouseenter', function () {
                    if (hideTimeout) clearTimeout(hideTimeout);
                    searchForm.classList.remove('d-none');
                    searchForm.querySelector('input').focus();
                });
                searchBox.addEventListener('mouseenter', function () {
                    if (hideTimeout) clearTimeout(hideTimeout);
                    searchForm.classList.remove('d-none');
                });
                searchBox.addEventListener('mouseleave', function () {
                    hideTimeout = setTimeout(function () {
                        searchForm.classList.add('d-none');
                    }, 2000); // 2 giây
                });
                // Cho phép click vào icon cũng hiện form
                searchToggle.addEventListener('click', function (e) {
                    e.preventDefault();
                    if (hideTimeout) clearTimeout(hideTimeout);
                    searchForm.classList.toggle('d-none');
                    if (!searchForm.classList.contains('d-none')) {
                        searchForm.querySelector('input').focus();
                    }
                });
            }
        });
    </script>
